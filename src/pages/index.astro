---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout class="home" title="Chiara Mendolia">
  <main class="region-content home">
    <div class="region">
      <div class="column column-first">
        <div class="field-body">
          <h1>
            Are you <br />looking for <br />a new junior <br />
            <span class="color"> graphic designer</span>?
          </h1>
        </div>
      </div>
      <div class="column column-second">
        <div class="field-body">
          <p>
            Don't look further!
            <br />I'm available for an internship
            <br /> from august 2023.
          </p>
          <p><span class="me">Chiara Mendolia</span></p>
        </div>
      </div>
    </div>

    <div class="region">
      <div class="column column-first">
        <p class="field-label">
          <span>Works</span>
        </p>

        <h2>
          Take
          <br />
          a look
        </h2>
      </div>
      <div class="column column-second">
        <div class="field-image">
          <img src="placeholder.jpg" alt="" width="200" height="200" />
        </div>
      </div>
      <div class="column column-third">
        <Nav />
      </div>
    </div>
  </main>
</Layout>
